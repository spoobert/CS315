#include<iostream>
using namespace std;

int reverseList( int a[], int n)
{
  if( n == 0 )
    return n;


  reverseList( a , n - 1 );
  
  return 0;
 	
	
}

int main()
{

   cout << "hello world" << endl;

   int a[ 3 ] = {1, 2, 3 };

   reverseList( a , 3 );

   for(int i = 0; i < 3 ; i++)
     cout << a[i] << endl; 
   
   return 0;
}
